@model IEnumerable<Test02.Models.Zakaznik>

@{
    ViewData["Title"] = "Seznam Zákazníků";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">
    Seznam zákazníků
</h3>
<hr />
<p class="text-center">
    <a class="btn btn-primary" asp-action="Create">Nový zákazník</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jmeno)
                @Html.DisplayNameFor(model => model.Prijmeni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a class="link" asp-action="Details" asp-route-id="@item.Id">
                @Html.DisplayFor(modelItem => item.Jmeno)
                @Html.DisplayFor(modelItem => item.Prijmeni)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td class="text-center">
                <a class="btn btn-sm btn-outline-info" asp-area="" asp-controller="Adresa" asp-action="Index" asp-route-id="@item.Id">Adresa</a> |
                <a class="btn btn-sm btn-outline-info" asp-area="" asp-controller="Pojisteni" asp-action="Index" asp-route-id="@item.Id">Pojištění</a>
            </td>
        </tr>
}
    </tbody>
</table>
