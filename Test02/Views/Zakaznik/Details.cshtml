@model Test02.Models.Zakaznik

@{
    ViewData["Title"] = "Náhled na Zákazníka";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">
    Detail zákazníka - @Html.DisplayFor(model => model.Jmeno) @Html.DisplayFor(model => model.Prijmeni)
</h3>

<hr />
<div class="row justify-content-center">
    <div class="col-sm-10">
        <dl class="row border-bottom mb-0">
            <dt class="col-sm-6 text-sm-end">
                @Html.DisplayNameFor(model => model.Jmeno)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.Jmeno)
            </dd>
            <dt class="col-sm-6 text-sm-end">
                @Html.DisplayNameFor(model => model.Prijmeni)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.Prijmeni)
            </dd>
            <dt class="col-sm-6 text-sm-end">
                @Html.DisplayNameFor(model => model.Datum)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.Datum)
            </dd>
            <dt class="col-sm-6 text-sm-end">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-6 text-sm-end">
                @Html.DisplayNameFor(model => model.Telefon)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.Telefon)
            </dd>
        </dl>
    </div>
</div>
<div class="text-center mt-3">
    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model?.Id">Upravit</a> |
    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model?.Id">Smazat</a> |
    <a class="btn btn-outline-secondary" asp-action="Index">Zpět</a>
</div>
